# ============================================================================
# Archivo de Ejemplo de Variables de Entorno
# Copiar a .env y modificar según el entorno
# ============================================================================

# === Base de Datos ===
# La base de datos SQLite está en la carpeta migraciones/
DATABASE_PATH=migraciones/DB_Inmo_Velar.db

# === Aplicación ===
APP_NAME=Sistema de Gestión Inmobiliaria
APP_VERSION=1.0.0
DEBUG=False

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === Seguridad ===
# IMPORTANTE: Cambiar en producción
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_PLEASE_USE_SECURE_KEY

# === Negocio ===
MONEDA_DEFAULT=COP
COMISION_DEFAULT_PORCENTAJE=10.0

# === MIGRACIÓN REFLEX ===
# true: usa Reflex (puerto 3000), false: usa Flet (puerto 8000)
USE_REFLEX=false
